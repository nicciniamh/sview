#!/usr/bin/env python3
import os
import sys
import subprocess
if os.getuid() != 0:
	print("Error: not uid 0",file=sys.stdout)
	sys.exit(1)

unit, action= sys.argv[1:][:2]

command = ["systemctl", action, unit]

# Run the command
try:
	result = subprocess.run(command, capture_output=True, text=True)
	if result.returncode == 0:
		pass
	else:
		print(f"Privileged task failed: {result.stderr}",sys.stderr)
except Exception as e:
	print(f"An error occurred: {e}",sys,stderr)

